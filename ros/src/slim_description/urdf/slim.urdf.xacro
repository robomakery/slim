  </gazebo>

  <joint name="bl_frame_post_joint" type="fixed">
    <parent link="lift_base" />
    <child link="bl_frame_post" />
  </joint>

  <link name="bl_frame_post">
    <visual>
      <origin xyz="0.55 -0.64 0.3" />
      <geometry>
        <box size="0.02 0.02 0.6" />
      </geometry>
      <material name="Grey" />
    </visual>
    <collision>
      <origin xyz="0.55 -0.64 0.3" />
