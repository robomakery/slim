{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-1",
            "source_ami": "ami-4ae27e22",
            "instance_type": "g2.2xlarge",
            "ssh_username": "ubuntu",
            "ami_name": "packer caffe {{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "chef-solo",
            "cookbook_paths": ["ops/packer/cookbooks/vendor"],
            "run_list": ["caffe::default"]
        }
    ]
}
